{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "vuejs: chrome",
      "url": "http://localhost:81", // Vue项目运行的端口
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      },
      "userDataDir": "${workspaceFolder}/.vscode/chrome",
      "sourceMaps": true,
      "runtimeArgs": ["--disable-session-crashed-bubble"],
      "trace": true
    }
  ]
}
